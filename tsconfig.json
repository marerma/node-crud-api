{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "declaration": false,
    "outDir": "dist",
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["src"],
  "lib": ["es2015"]
}